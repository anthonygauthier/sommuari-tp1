<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<FlowPane xmlns:fx="http://javafx.com/fxml/1" alignment="CENTER" xmlns="http://javafx.com/javafx/8.0.40"
          fx:controller="Sommurai.Controller">
    <!-- Première ligne -->
    <GridPane alignment="TOP_CENTER" fx:id="gridChiffres">
        <rowConstraints>
            <RowConstraints maxHeight="25.0" minHeight="25.0" prefHeight="25.0"></RowConstraints>
        </rowConstraints>
        <children>
            <!-- l'ajout de boutons est faite en programmation -->
        </children>
    </GridPane>
    <GridPane hgap="10" vgap="10" alignment="BOTTOM_CENTER">
        <!-- Déclaration des colonnes et des lignes -->
        <columnConstraints>
            <ColumnConstraints/>
            <ColumnConstraints minWidth="10.0" prefWidth="100.0"/>
            <ColumnConstraints minWidth="10.0" prefWidth="100.0"/>
            <ColumnConstraints minWidth="10.0" prefWidth="100.0"/>
            <ColumnConstraints minWidth="10.0" prefWidth="100.0"/>
            <ColumnConstraints minWidth="10.0" prefWidth="100.0"/>
            <ColumnConstraints minWidth="10.0" prefWidth="100.0"/>
        </columnConstraints>
        <rowConstraints>
            <RowConstraints maxHeight="25.0" minHeight="25.0" prefHeight="25.0"/>
            <RowConstraints maxHeight="25.0" minHeight="25.0" prefHeight="25.0"/>
        </rowConstraints>
        <!-- Déclaration éléments du gridpane -->
        <children>
            <!-- Deuxième ligne -->
            <Text fx:id="txtBut" text="" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
            <Text fx:id="txtSomme" text="Somme: " GridPane.columnIndex="1" GridPane.rowIndex="1"/>
            <CheckBox fx:id="cbxNoise" text="Noise" GridPane.columnIndex="2" GridPane.rowIndex="1"/>
            <CheckBox fx:id="cbxFindmean" text="Find mean" GridPane.columnIndex="3" GridPane.rowIndex="1"/>
            <Button fx:id="btnNext" onAction="#btnClickNext" prefWidth="90.0" text="Next" GridPane.columnIndex="4"
                    GridPane.rowIndex="1"/>
            <Button fx:id="btnGiveUp" onAction="#btnClickGiveUp" prefWidth="90.0" text="Give up"
                    GridPane.columnIndex="5" GridPane.rowIndex="1"/>
            <Button fx:id="btnReset" onAction="#btnClickReset" prefWidth="90.0" text="Reset" GridPane.columnIndex="6"
                    GridPane.rowIndex="1"/>
        </children>
    </GridPane>
</FlowPane>
